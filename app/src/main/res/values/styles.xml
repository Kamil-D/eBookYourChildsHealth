<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--Theme_Holo_Light_Dialog_NoActionBar-->
    <style name="myDialog" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyLinearLayoutStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/md_keylines</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/white</item>
        <item name="android:radius">2dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">@dimen/item_min_height</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">@dimen/card_margin</item>
        <item name="android:paddingRight">@dimen/card_margin</item>
        <item name="android:background">@color/colorLightPrimary</item>
    </style>

    <style name="MyTextViewNoteStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">@dimen/card_margin</item>
        <item name="android:paddingRight">@dimen/card_margin</item>
        <item name="android:background">@color/colorLightPrimaryLighter</item>
    </style>

    <style name="MyTextViewStyle2" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/item_min_height</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:layout_gravity">fill_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/item_min_height</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="MyButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/my_button_height</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/buttonaddchildstyle</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_marginBottom">@dimen/md_keylines</item>
        <item name="android:layout_marginLeft">@dimen/md_keylines</item>
        <item name="android:layout_marginRight">@dimen/md_keylines</item>
    </style>

    <style name="MySpinnerStyle" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spinner_height</item>
        <item name="android:layout_weight">2</item>
        <item name="android:minHeight">@dimen/item_min_height</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyButtonPickDateStyle" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:minHeight">@dimen/item_min_height</item>
        <item name="android:text">@string/pick_date</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyToolbarStyle" parent="android:Widget.Material.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

</resources>
