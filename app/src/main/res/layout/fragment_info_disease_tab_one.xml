<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:foreground="?attr/selectableItemBackground"
    tools:context="com.example.kamil.ebookyourchildshealth.fragment.childmainpanel.InfoDiseaseTabOneFragment">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollViewDiseaseInfoTabOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentScrim="#BDBDBD"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <LinearLayout
            android:id="@+id/firstLinearLayoutInNestedScrollViewDiseaseInfoTabOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/MyLinearLayoutStyle1" >

                <TextView
                    android:id="@+id/columnDiseaseName"
                    style="@style/MyTextViewStyle" />

                <TextView
                    android:id="@+id/columnDiseaseNameValue"
                    style="@style/MyTextViewStyle2" />

            </LinearLayout>


            <LinearLayout
                style="@style/MyLinearLayoutStyle1" >

                <TextView
                    android:id="@+id/columnDate"
                    style="@style/MyTextViewStyle" />

                <TextView
                    android:id="@+id/columnDateValue"
                    style="@style/MyTextViewStyle2"/>

            </LinearLayout>

            <Button
                android:id="@+id/buttonUpdateDisease"
                android:text="@string/button_edit_disease"
                android:textSize="25sp"
                style="@style/MyButtonStyle"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>