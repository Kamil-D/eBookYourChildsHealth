<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_choose_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/md_keylines"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:clipToPadding="false"
    tools:context="com.example.kamil.ebookyourchildshealth.fragment.ChooseChildFragment">

    <LinearLayout
        android:id="@+id/firstLinearLayoutInNestedScrollViewChooseChild"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonAddChild"
            android:text="@string/button_add_child"
            android:textSize="25sp"
            style="@style/MyButtonStyle" />

        <include
            android:id="@+id/recycler_view_choose_child"
            layout="@layout/recycler_view2" />

    </LinearLayout>


</LinearLayout>