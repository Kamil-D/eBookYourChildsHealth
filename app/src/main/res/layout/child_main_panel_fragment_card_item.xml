<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_child_panel"
    android:layout_width="match_parent"
    android:layout_height="@dimen/info_text_view_card_item_height"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:foreground="?attr/selectableItemBackground">

<!--app:cardBackgroundColor="@color/colorDivider"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/columnName"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="match_parent"
            tools:text="Name"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:background="@color/colorLightPrimary"/>

        <TextView
            android:id="@+id/columnValue"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            tools:text="Wartosc kolumny"
            android:paddingLeft="@dimen/md_keylines"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    </LinearLayout>

</android.support.v7.widget.CardView>