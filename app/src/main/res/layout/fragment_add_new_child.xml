<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_add_new_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/md_keylines"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:clipToPadding="false"
    tools:context="com.example.kamil.ebookyourchildshealth.fragment.AddNewChildFragment">

    <!--android:foreground="?attr/selectableItemBackground">-->
    <!--app:cardBackgroundColor="@color/colorDivider"-->

    <LinearLayout
        style="@style/MyLinearLayoutStyle1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_horizontal"
            android:text="@string/pick_photo_add_child"
            android:textSize="20sp"
            android:textColor="@color/primaryText" />

        <ImageButton
            android:id="@+id/imageButtonAddPhoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/choose_child_image_button_height"
            android:scaleType="centerCrop"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:background="@color/colorLightPrimary"/>

    </LinearLayout>

    <LinearLayout
        style="@style/MyLinearLayoutStyle1" >

        <TextView
            android:id="@+id/columnName1"
            style="@style/MyTextViewStyle" />

        <EditText
            android:id="@+id/columnNameValue"
            android:inputType="textPersonName"
            android:maxLength="40"
            style="@style/MyEditTextStyle" />

    </LinearLayout>

    <LinearLayout
        style="@style/MyLinearLayoutStyle1" >

        <TextView
            android:id="@+id/columnSurname"
            style="@style/MyTextViewStyle" />

        <EditText
            android:id="@+id/columnSurnameValue"
            android:inputType="textPersonName"
            android:maxLength="40"
            style="@style/MyEditTextStyle" />

    </LinearLayout>

    <LinearLayout
        style="@style/MyLinearLayoutStyle1" >

        <TextView
            android:id="@+id/columnPesel"
            style="@style/MyTextViewStyle" />

        <EditText
            android:id="@+id/columnPeselValue"
            android:inputType="number"
            style="@style/MyEditTextStyle" />

    </LinearLayout>

    <LinearLayout
        style="@style/MyLinearLayoutStyle1" >

        <TextView
            android:id="@+id/columnSex"
            style="@style/MyTextViewStyle"/>

        <Spinner
            android:id="@+id/columnSexValueSpinner"
            style="@style/MySpinnerStyle" />

    </LinearLayout>

    <LinearLayout
        style="@style/MyLinearLayoutStyle1" >

        <TextView
            android:id="@+id/columnBloodGroup"
            style="@style/MyTextViewStyle"/>

        <Spinner
            android:id="@+id/columnBloodGroupValueSpinner"
            style="@style/MySpinnerStyle" />

    </LinearLayout>

    <LinearLayout
        style="@style/MyLinearLayoutStyle1" >

        <TextView
            android:id="@+id/columnBirthDate"
            style="@style/MyTextViewStyle"/>

        <Button
            android:id="@+id/buttonDatePicker"
            style="@style/MyButtonPickDateStyle" />

    </LinearLayout>

    <LinearLayout
        style="@style/MyLinearLayoutStyle1" >

        <TextView
            android:id="@+id/columnBirthPlace"
            style="@style/MyTextViewStyle"/>

        <EditText
            android:id="@+id/columnBirthPlaceValue"
            android:inputType="textPersonName"
            android:maxLength="40"
            style="@style/MyEditTextStyle" />

    </LinearLayout>

    <LinearLayout
        style="@style/MyLinearLayoutStyle1" >

        <TextView
            android:id="@+id/columnMother"
            style="@style/MyTextViewStyle"/>

        <EditText
            android:id="@+id/columnMotherValue"
            android:inputType="textPersonName"
            android:maxLength="60"
            style="@style/MyEditTextStyle" />

    </LinearLayout>

    <LinearLayout
        style="@style/MyLinearLayoutStyle1" >

        <TextView
            android:id="@+id/columnFather"
            style="@style/MyTextViewStyle"/>

        <EditText
            android:id="@+id/columnFatherValue"
            android:inputType="textPersonName"
            android:maxLength="60"
            style="@style/MyEditTextStyle" />

    </LinearLayout>


    <Button
        android:id="@+id/buttonSaveChild"
        android:text="@string/button_save_child"
        android:textSize="25sp"
        style="@style/MyButtonStyle"/>

</LinearLayout>